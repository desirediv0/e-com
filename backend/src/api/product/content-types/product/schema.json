{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "Title": {
      "type": "string",
      "required": true
    },
    "Description": {
      "type": "blocks",
      "required": true
    },
    "RegularPrice": {
      "type": "integer"
    },
    "SalePrice": {
      "type": "integer",
      "required": true
    },
    "Slug": {
      "type": "uid",
      "targetField": "Title",
      "required": true,
      "minLength": 1
    },
    "Thumbnail": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "Size": {
      "type": "enumeration",
      "enum": [
        "Kg 1",
        "Kg 2.5",
        "Kg 5",
        "Kg 10"
      ],
      "required": true
    },
    "Gallery": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "MetaTitle": {
      "type": "string",
      "required": true
    },
    "MetaDescription": {
      "type": "text",
      "required": false
    }
  }
}
